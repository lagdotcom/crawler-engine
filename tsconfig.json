{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["DOM", "ESNEXT"]
  },
  "ts-node": { "compilerOptions": { "module": "commonjs" } },

  "include": ["src/**/*", "res"],
  "exclude": ["node_modules"]
}
